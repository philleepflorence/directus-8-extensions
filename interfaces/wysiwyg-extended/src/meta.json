{
	"name": "WYSIWYG Extended",
	"version": "1.2.0",
	"types": ["string"],
	"icon": "format_quote",
	"recommended": {
		"length": 65534
	},
	"options": {
		"cdn": {
			"name": "CDN URL",
			"comment": "The CDN Host to use for files - Defaults to Assets (Thumbnails) Module",
			"placeholder": "https://cdn.domain.com",
			"interface": "text-input",
			"length": 100
		},
		"cdn_template": {
			"name": "CDN Thumbnail Template",
			"comment": "The template to use when processing thumbnail paths - see 'settings.assetsWhitelists' for available properties!",
			"interface": "text-input",
			"length": 100,
			"placeholder": "app/thumbnails/{{width}}/{{height}}/{{fit}}"
		},
		"stylesheet": {
			"name": "CSS Stylesheet",
			"comment": "Project CSS Stylesheet to load when interface is rendered",
			"placeholder": "/admin/lib/styles/wysiwyg.css",
			"default": "/admin/lib/styles/wysiwyg.css",
			"interface": "text-input",
			"length": 100
		},
		"toolbar": {
			"name": "Toolbar Options",
			"comment": "Show, hide, and reorder toolbar options",
			"interface": "checkboxes",
			"default": [
				"fullscreen", "undo", "redo", "bold", "italic", "underline", "bullist", "numlist", "blockquote", "h1", "h2", "h3", "h4", "h5", "h6", "link", "unlink", "image", "media", "hr", "strikethrough", "subscript", "superscript", "indent", "table", "selectall", "copy", "cut", "paste", "remove", "code", "codesample", "removeformat"
			],
			"options": {
				"choices": {
					"aligncenter": "Align Center",
					"alignjustify": "Align Justify",
					"alignleft": "Align Left",
					"alignnone": "Align None",
					"alignright": "Align Right",
					"forecolor": "Foreground Color",
					"backcolor": "Background Color",
					"bold": "Bold",
					"italic": "Italic",
					"underline": "Underline",
					"strikethrough": "Strikethrough",
					"subscript": "Subscript",
					"superscript": "Superscript",
					"blockquote": "Blockquote",
					"bullist": "Bullet List",
					"numlist": "Numbered List",
					"hr": "Horizontal Rule",
					"link": "Add Link",
					"unlink": "Remove Link",
					"media": "Add Media",
					"image": "Add Image",
					"copy": "Copy",
					"cut": "Cut",
					"paste": "Paste",
					"h1": "Heading 1",
					"h2": "Heading 2",
					"h3": "Heading 3",
					"h4": "Heading 4",
					"h5": "Heading 5",
					"h6": "Heading 6",
					"fontselect": "Select Font",
					"fontsizeselect": "Select Font Size",
					"indent": "Indent",
					"outdent": "Outdent",
					"undo": "Undo",
					"redo": "Redo",
					"remove": "Remove",
					"removeformat": "Remove Format",
					"selectall": "Select All",
					"table": "Table",
					"visualaid": "View invisible elements",
					"code": "View Source",
					"fullscreen": "Full Screen",
					"ltr rtl": "Directionality"
				}
			}
		},
		"custom_formats": {
			"name": "Custom Formats",
			"comment": "Custom HTML wrappers for content",
			"interface": "json",
			"default": [{
					"title": "Small",
					"block": "p",
					"classes": "small",
					"styles": {
						"font-size": "0.875rem",
						"font-weight": "500"
					}
				},
				{
					"title": "Lead",
					"block": "p",
					"classes": "lead",
					"styles": {
						"font-size": "1.3rem",
						"font-weight": "300"
					}
				}
			],
			"options": {
				"template": [{
					"title": "My Custom Format",
					"inline": "span",
					"classes": "custom-wrapper",
					"styles": {
						"color": "#00ff00",
						"font-size": "20px"
					},
					"attributes": {
						"title": "My Custom Wrapper"
					}
				}]
			}
		},
		"tinymce_options": {
			"name": "TinyMCE Options",
			"comment": "Override any of [the TinyMCE init options](https://www.tiny.cloud/docs/configure/).",
			"interface": "json",
			"default": {
				"image_caption": true,
				"image_class_list": [{
						"title": "None",
						"value": ""
					},
					{
						"title": "Image Full Width",
						"value": "d-block-100"
					},
					{
						"title": "Align Image Center",
						"value": "d-block-center"
					},
					{
						"title": "Align Image Right",
						"value": "d-block-right"
					},
					{
						"title": "Align Image Left",
						"value": "d-block-left"
					}
				],
				"image_dimensions": true
			},
			"advanced": true
		}
	}
}